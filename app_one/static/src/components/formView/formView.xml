<?xml version="1.0" encoding="UTF-8"?>
<template xml:space="preserve">
  <t t-name="app_one.FormView">
    <div class="p-3">
        <div class="mb-3">
            <label>Name</label>
            <input t-model="state.name" placeholder="enter property name"/>
        </div>
         <div class="mb-3">
            <label>Postcode</label>
            <input t-model="state.postcode" placeholder="enter property postcode"/>
        </div>
         <div class="mb-3">
            <label>Date Availability</label>
            <input t-model="state.date_availability" type="date" placeholder="enter Date Availability"/>
        </div>
        <div class="footer">
            <button class="btn btn-primary me-2" t-on-click="this.createRecord">save</button>
            <button class="btn btn-secondary me-2" t-on-click="cancel">cancel</button>
        </div>
    </div>
  </t>
</template>
