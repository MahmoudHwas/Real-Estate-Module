<odoo>
    <!-- تعريف tree view -->
    <record id="property_view_tree" model="ir.ui.view">
        <field name="name">property tree</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <tree class="header_custom" multi_edit="1" create="1" edit="1" delete="1">
                <field name="name"/>
                <field name="postcode"/>
                <field name="owner_id"/>
                <field name="tag_ids"/>
                <field name="date_availability" optional="1"/>
                <field name="selling_price" optional="1"/>
                <field name="garden"/>
                <field name="garage"/>
                <field name="garden_area"/>
                <field name="state"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- تعريف form view -->
    <record id="property_view_form" model="ir.ui.view">
        <field name="name">property.form</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form string="Property Form" create="1" edit="1" delete="1">
                <sheet>
                    <header>
                        <button name="action_draft" type="object" class="btn-primary" string="Set To Draft"/>
                        <button name="action_pending" type="object" class="btn-secondary" string="Set To Pending"/>
                        <button name="action_sold" type="object" class="btn-success" string="Set To Sold"/>
                        <field name="state" widget="statusbar" />
<!--                        <field name="state" widget="statusbar" statusbar_visible="draft,sold" />-->
                    </header>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                              <field name="name"/>
                        </h1>
                    </div>
                    <group>
                    <group>

                        <field name="description"/>
                        <field name="date_availability"/>
                        <field name="expected_price"/>
                        <field name="diff"/>
                        <field name="selling_price"/>
                        <field name="bedrooms"/>
                    </group>
                        <group>
                        <field name="owner_id"/>
                        <field name="owner_address"/>
                        <field name="owner_phone"/>
                        <field name="living_area"/>
                        <field name="facades"/>
                        <field name="garage"/>
                        <field name="garden"/>
                        <field name="garden_area"/>
                        <field name="garden_orientation"/>
                        <field name="tag_ids" widget="many2many_tags"/>
                        <field name="active"/>

                        </group>
                    </group>
                    <notebook>
                        <page string="Bedrooms">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="description" />
                                    <field name="area" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>
    <!--  search view -->
 <record id="property_view_search" model="ir.ui.view">
        <field name="name">property search</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <search>
                <field name="postcode" />
                <field name="name" />
                <filter name="is_garden" string="With garden" domain="[('garden', '=', True)]" />
                 <filter name="is_garage" string="With garage" domain="[('garage', '=', True)]" />
                 <filter name="group_garage" string="Garage" context="{'group_by': 'garage'}" />
            </search>
        </field>
    </record>
    <!-- تعريف الـ action لفتح القائمة -->
    <record id="property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">property</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="property_view_tree"/>
    </record>
   <record id="property_closed_server_action" model="ir.actions.server">
    <field name="name">Close Property</field>
    <field name="model_id" ref="model_property" />
    <field name="state">code</field>
    <field name="code">
        records.action_closed()
    </field>
</record>

 <menuitem id="property_menu_item" name="Properties" parent="properties_menu" action="property_action"/>

</odoo>
