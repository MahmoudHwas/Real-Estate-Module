<odoo>
    <!-- تعريف tree view -->
    <record id="building_view_tree" model="ir.ui.view">
        <field name="name">building tree</field>
        <field name="model">building</field>
        <field name="arch" type="xml">
            <tree>
                <field name="no"/>
                <field name="code"/>
                <field name="description"/>
                <field name="name"/>
                <field name="active"/>

            </tree>
        </field>
    </record>

    <!-- تعريف form view -->
    <record id="building_view_form" model="ir.ui.view">
        <field name="name">building.form</field>
        <field name="model">building</field>
        <field name="arch" type="xml">
            <form >
                <sheet>

                    <group string="General info.">
                        <group>
                            <field name="no"/>
                            <field name="code"/>


                         </group>
                        <group string="Addiitional info.">
                            <field name="description"/>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                    </group>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>
    <!--  search view -->
 <record id="building_view_search" model="ir.ui.view">
        <field name="name">building search</field>
        <field name="model">building</field>
        <field name="arch" type="xml">
            <search>

                <field name="code" />
                <field name="no" />

            </search>
        </field>
    </record>
    <!-- تعريف الـ action لفتح القائمة -->
    <record id="building_action" model="ir.actions.act_window">
        <field name="name">Building</field>
        <field name="res_model">building</field>

    </record>
    <menuitem id="building_menu_item" name="Buildings" parent="properties_menu" action="building_action"/>



</odoo>
